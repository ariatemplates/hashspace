/**
 * Taken from Aria Templates: https://github.com/ariatemplates/ariatemplates/blob/master/test/aria/touch/gestures/SingleTap.js
 */

require("hsp/gestures/singleTap").register();
var fireEvent=require("hsp/utils/eventgenerator").fireEvent,
    touchEventMap = require("hsp/gestures/touchEvent").touchEventMap;
</script>

<template test1(ctl)>
    <div title="test1" onsingletap="{ctl.handleEvent($event)}" onsingletapstart="{ctl.handleEvent($event)}" onsingletapcancel="{ctl.handleEvent($event)}">
        Hello!
    </div>
</template>

<script>
describe("SingleTap gesture", function () {

    function validate(expected, result) {
        expect(expected.length).to.equal(result.length);
        for (var i = 0; i < expected.length; i ++) {
            expect(expected[i]).to.equal(result[i]);
        }
    }

    var clock;
    beforeEach(function () {
         clock = sinon.useFakeTimers();
     });

    afterEach(function () {
        clock.restore();
    });

    it("tests a cancel single tap: touchstart, touchmove with 2 fingers", function () {
        var expected =  ["singletapstart", "singletapcancel"];
        var result = [];
        var ctl = {
            handleEvent : function (evt) {
                result.push(evt.type);
            }
        };
        var n = test1(ctl);
        fireEvent(touchEventMap.touchstart, n.node.firstChild, {
            isPrimary : true,
            touches : [{
                        clientX : 0,
                        clientY : 0
                    }],
            changedTouches : [{
                        clientX : 0,
                        clientY : 0
                    }]
        });
        fireEvent(touchEventMap.touchmove, n.node.firstChild, {
            isPrimary : false,
            touches : [{
                        clientX : 0,
                        clientY : 0
                    }, {
                        clientX : 5,
                        clientY : 5
                    }],
            changedTouches : [{
                        clientX : 5,
                        clientY : 5
                    }]
        });
        validate(expected, result);
        n.$dispose();
    });

    it("tests a cancel single tap: touchstart, touchmove with distance > 10", function () {
        var expected =  ["singletapstart", "singletapcancel"];
        var result = [];
        var ctl = {
            handleEvent : function (evt) {
                result.push(evt.type);
            }
        };
        var n = test1(ctl);
        fireEvent(touchEventMap.touchstart, n.node.firstChild, {
            clientX : 0,
            clientY : 0
        });
        fireEvent(touchEventMap.touchmove, n.node.firstChild, {
            clientX : 100,
            clientY : 100
        });
        validate(expected, result);
        n.$dispose();
    });

    it("tests a not completed single tap: touchstart, touchmove with distance <= 10, touchend, wait 100 ms", function () {
        var expected =  ["singletapstart"];
        var result = [];
        var ctl = {
            handleEvent : function (evt) {
                result.push(evt.type);
            }
        };
        var n = test1(ctl);
        fireEvent(touchEventMap.touchstart, n.node.firstChild, {
            clientX : 0,
            clientY : 0
        });
        fireEvent(touchEventMap.touchmove, n.node.firstChild, {
            clientX : 5,
            clientY : 5
        });
        fireEvent(touchEventMap.touchend, n.node.firstChild, {
            clientX : 5,
            clientY : 5
        });
        clock.tick(100);
        validate(expected, result);
        n.$dispose();
    });

    it("tests a cancelled single tap because of doubletap: touchstart, touchmove with distance <= 10, touchend, touchstart", function () {
        var expected =  ["singletapstart", "singletapcancel"];
        var result = [];
        var ctl = {
            handleEvent : function (evt) {
                result.push(evt.type);
            }
        };
        var n = test1(ctl);
        fireEvent(touchEventMap.touchstart, n.node.firstChild, {
            clientX : 0,
            clientY : 0
        });
        fireEvent(touchEventMap.touchmove, n.node.firstChild, {
            clientX : 5,
            clientY : 5
        });
        fireEvent(touchEventMap.touchend, n.node.firstChild, {
            clientX : 5,
            clientY : 5
        });
        fireEvent(touchEventMap.touchstart, n.node.firstChild, {
            clientX : 5,
            clientY : 5
        });
        validate(expected, result);
        n.$dispose();
    });

    it("tests a valid single tap: touchstart, touchmove with distance <= 10, touchend, wait 250 ms", function () {
        var expected =  ["singletapstart", "singletap"];
        var result = [];
        var ctl = {
            handleEvent : function (evt) {
                result.push(evt.type);
            }
        };
        var n = test1(ctl);
        fireEvent(touchEventMap.touchstart, n.node.firstChild, {
            clientX : 0,
            clientY : 0
        });
        fireEvent(touchEventMap.touchmove, n.node.firstChild, {
            clientX : 5,
            clientY : 5
        });
        fireEvent(touchEventMap.touchend, n.node.firstChild, {
            clientX : 5,
            clientY : 5
        });
        clock.tick(250);
        validate(expected, result);
        n.$dispose();
    });

    

});
</script>